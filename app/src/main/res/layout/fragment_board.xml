<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"/>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="4"
        android:padding="10dp"
        tools:context=".Board">

        <!-- Row 1 -->
        <TextView
            android:id="@+id/tile_00"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text=""
            android:textSize="20sp"
            android:gravity="center"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="4dp" />
        <TextView
            android:id="@+id/tile_01"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text=""
            android:textSize="20sp"
            android:gravity="center"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="4dp" />
        <TextView
            android:id="@+id/tile_02"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text=""
            android:textSize="20sp"
            android:gravity="center"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="4dp" />
        <TextView
            android:id="@+id/tile_03"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text=""
            android:textSize="20sp"
            android:gravity="center"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_margin="4dp" />

        <!-- Row 2 -->
        <TextView
            android:id="@+id/tile_10"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text=""
            android:textSize="20sp"
            android:gravity="center"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="4dp" />
        <TextView
            android:id="@+id/tile_11"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text=""
            android:textSize="20sp"
            android:gravity="center"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="4dp" />
        <TextView
            android:id="@+id/tile_12"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text=""
            android:textSize="20sp"
            android:gravity="center"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="4dp" />
        <TextView
            android:id="@+id/tile_13"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text=""
            android:textSize="20sp"
            android:gravity="center"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_margin="4dp" />

        <!-- Row 3 -->
        <TextView
            android:id="@+id/tile_20"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text=""
            android:textSize="20sp"
            android:gravity="center"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="4dp" />
        <TextView
            android:id="@+id/tile_21"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text=""
            android:textSize="20sp"
            android:gravity="center"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="4dp" />
        <TextView
            android:id="@+id/tile_22"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text=""
            android:textSize="20sp"
            android:gravity="center"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="4dp" />
        <TextView
            android:id="@+id/tile_23"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text=""
            android:textSize="20sp"
            android:gravity="center"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_margin="4dp" />

        <!-- Row 4 -->
        <TextView
            android:id="@+id/tile_30"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text=""
            android:textSize="20sp"
            android:gravity="center"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_margin="4dp" />
        <TextView
            android:id="@+id/tile_31"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text=""
            android:textSize="20sp"
            android:gravity="center"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="4dp" />
        <TextView
            android:id="@+id/tile_32"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text=""
            android:textSize="20sp"
            android:gravity="center"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_margin="4dp" />
        <TextView
            android:id="@+id/tile_33"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text=""
            android:textSize="20sp"
            android:gravity="center"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_margin="4dp" />

    </GridLayout>

    <!-- Current Word TextView -->
    <TextView
        android:id="@+id/currentWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:padding="10dp"/>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/clearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear_button"
            android:layout_marginEnd="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit_button"
            android:layout_marginStart="16dp"/>

    </LinearLayout>

</LinearLayout>
